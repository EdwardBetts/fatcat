{
"settings": {
    "index": {
        "analysis": {
            "analyzer": {
                "default": {
                    "type": "custom",
                    "tokenizer": "standard",
                    "filter": [ "lowercase", "asciifolding" ]
                },
                "textIcu": {
                    "type": "custom",
                    "tokenizer": "icu_tokenizer",
                    "char_filter": [ "icu_normalizer" ],
                    "filter": [ "icu_folding" ]
                },
                "textIcuSearch": {
                    "type": "custom",
                    "tokenizer": "icu_tokenizer",
                    "char_filter": [ "icu_normalizer" ],
                    "filter": [ "icu_folding" ]
                }
            }
        }
    }
},
"mappings": {
